{
  "name": "chirp",
  "private": true,
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "mazurevich",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prune": "turbo prune",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint --parallel",
    "prepare": "husky install",
    "typecheck": "turbo run typecheck --parallel",
    "format": "prettier --write \"**/*.{css,scss,js,jsx,ts,tsx,md}\"",
    "check:deps": "turbo run check:deps --parallel"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "cross-env FILES=$(git diff --name-only --diff-filter=ACMRT | grep --line-buffered -E '\\.(js|jsx|ts|tsx)$') eslint $FILES --fix"
    ],
    "packages/**/*.{js,ts,jsx,tsx}": [
      "cross-env FILES=$(git diff --name-only --diff-filter=ACMRT | grep --line-buffered -E '\\.(js|jsx|ts|tsx)$') eslint $FILES --fix"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.1.0",
  "dependencies": {
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "turbo": "^1.8.8"
  }
}
